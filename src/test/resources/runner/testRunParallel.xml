<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression" parallel="classes" thread-count="10">
    <listeners>
        <listener class-name="com.practice.reportConfig.MethodListener"/>
        <listener class-name="com.practice.reportConfig.AllureTestListener"/>
    </listeners>
    <test name="Regression on Chrome">
        <classes>
            <class name="com.practice.tests.web.Employee_Test_001"/>
            <class name="com.practice.tests.web.HomePageTest"/>
            <class name="com.practice.tests.web.LeftMenuComponentTest"/>
        </classes>
    </test>

    <test name="Regression on Firefox">
        <classes>
            <class name="com.practice.tests.web.Employee_Test_001"/>
            <class name="com.practice.tests.web.HomePageTest"/>
            <class name="com.practice.tests.web.LeftMenuComponentTest"/>
        </classes>
    </test>

</suite>
