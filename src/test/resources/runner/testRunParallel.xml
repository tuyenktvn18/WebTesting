<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Regression" parallel="classes" thread-count="10">
    <listeners>
        <listener class-name="com.practice.config.reportConfig.MethodListener"/>
        <listener class-name="com.practice.config.reportConfig.AllureTestListener"/>
    </listeners>
    <test name="Regression on Chrome">
        <classes>
            <class name="com.practice.tests.web.PIM.Auto_003_Add_New_Employee"/>
            <class name="com.practice.tests.web.Dashboard.Auto_001_Dashboard_Page_Test"/>
            <class name="com.practice.tests.web.Dashboard.Auto_002_Left_Menu_Component_Test"/>
        </classes>
    </test>

    <test name="Regression on Firefox">
        <classes>
            <class name="com.practice.tests.web.PIM.Auto_003_Add_New_Employee"/>
            <class name="com.practice.tests.web.Dashboard.Auto_001_Dashboard_Page_Test"/>
            <class name="com.practice.tests.web.Dashboard.Auto_002_Left_Menu_Component_Test"/>
        </classes>
    </test>

</suite>
